<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}SymphBlog{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            {% include 'init/navbar.html.twig' %}
        {% endblock %}

        <div class="container">
            {% block body %}{% endblock %}

            <footer>
                {% block footer %}
                    <div class="row">
                        <div class="col-lg-12">
                            <p>Copyright &copy; SymphBlog 2018</p>
                        </div>
                    </div>
                {% endblock %}
            </footer>
        </div>


        {% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
