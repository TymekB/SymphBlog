{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->

            <!-- Title -->
            <h1>{{ post.header }}</h1>

            <!-- Author -->
            <p class="lead">
                by <a href="#">{{ post.admin.username }}</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> Posted on August 24, 2013 at 9:00 PM</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-responsive" src="http://placehold.it/900x300" alt="">

            <hr>

            <!-- Post Content -->
            <p class="text-justify">{{ post.body }}</p>

            <hr>

            <!-- Blog Comments -->

            <!-- Comments Form -->
            <div class="well">
                <h4>Leave a Comment:</h4>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.body) }}
                    {{ form_errors(form.body) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                {{ form_end(form) }}
            </div>

            {% include 'init/messages.html.twig' %}
            <hr>

            {% for comment in post.comments|reverse %}
                <div class="media">
                    <a class="pull-left" href="#">
                        <img class="media-object" src="http://placehold.it/64x64" alt="">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading">{{ comment.getUser().username }}
                            <small>{{ comment.createdAt|date("F jS \\a\\t g:ia") }}</small>
                            <a href="#" class="btn btn-default btn-sm">Edit</a> <a href="#" class="btn btn-danger btn-sm">Delete</a>

                        </h4>
                        {{ comment.body }}
                    </div>
                </div>
            {% endfor %}

        </div>

        {% include "init/sidebar.html.twig" %}

    </div>
{% endblock %}