{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->

            <!-- Title -->
            <h1>{{ post.header }}</h1>

            <!-- Author -->
            <p class="lead">
                by <a href="#">{{ post.admin.username }}</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> Posted on August 24, 2013 at 9:00 PM</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-responsive" src="http://placehold.it/900x300" alt="">

            <hr>

            <!-- Post Content -->
            <p class="text-justify">{{ post.body }}</p>

            <hr>

            <!-- Blog Comments -->

            <!-- Comments Form -->
            {{ render(controller('App\\Controller\\CommentsController::create', {'postId': post.id})) }}

            {% include 'init/messages.html.twig' %}
            <hr>

            <!-- Posted Comments -->

            {{ render(controller('App\\Controller\\CommentsController::list', {'postId': post.id})) }}

        </div>

        {% include "init/sidebar.html.twig" %}

    </div>
{% endblock %}