{% extends 'base.html.twig' %}

{% block body %}


    <h1>Published posts</h1>
    <a href="{{ path('post_create') }}" class="btn btn-primary">Create new post</a>
    <hr>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Header</th>
                <th>Created at</th>
                <th>Author</th>
            </tr>
        </thead>

        <tbody>
            {% for post in posts %}
                <tr class="clickable-row" data-href="{{ path('post_show', {'id': post.id}) }}">
                    <td>{{ post.header }}</td>
                    <td>{{ post.createdAt|date("F jS \\a\\t g:ia") }}</td>
                    <td>{{ post.admin.username }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% include 'init/messages.html.twig' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('.clickable-row').click(function() {
            location.href = $(this).data('href');
        });

    </script>
{% endblock %}